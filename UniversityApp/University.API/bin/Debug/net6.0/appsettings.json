{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=UniversityNew;User ID=sa;Password=reallyStrongPwd123; TrustServerCertificate=True",
    "Serilog": {
      "Using": [ "Serilog.Sinks.File" ],
      "MinumumLevel": {
        "Default": "Information"
      },
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "../logs/webapi-.log",
            "rollingInterval": "Day",
            "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
          }
        }
      ]
    }
  }
}

